<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <!--<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="5">
    -->
    <TableLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1" android:layout_margin="5dp">
        <TableRow android:id="@+id/startTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/startLabelTextView"
                android:text="Start Time"  android:paddingTop="10dp" android:textSize="15sp"></TextView>
            <TextView android:id="@+id/startTextView" android:paddingTop="10dp" android:textColor="@android:color/black" android:textSize="15sp" >
            </TextView>
        </TableRow>



        <TableRow android:id="@+id/endTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/endLabelTextView"
                android:text="End Time: "  android:paddingTop="10dp" android:textSize="15sp"></TextView>
            <TextView android:id="@+id/endTextView"
                android:paddingTop="10dp" android:textSize="15sp" android:textColor="@android:color/black" ></TextView>
        </TableRow>



    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.40"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/delete"
            android:layout_weight="0.47" />

    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="xzheng2.cmu.edu.hw3.ViewActivity.IDriftActivity$PlaceholderFragment">

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="xzheng2"
        android:id="@+id/andrewID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/version"
        android:layout_marginTop="91dp"
        android:layout_alignTop="@+id/andrewID"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/datetime"
        android:layout_alignBottom="@+id/version"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tweet"
        android:id="@+id/tweetbutton"
        android:layout_below="@+id/version"
        android:layout_toEndOf="@+id/version" />


</RelativeLayout>